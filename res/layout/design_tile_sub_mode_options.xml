<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tileSubMode"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/seaBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="seaBtn"
        android:text="Sea" />

    <Button
        android:id="@+id/rockBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="rockBtn"
        android:text="Rock" />

    <Button
        android:id="@+id/goalBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="goalBtn"
        android:text="Goal" />

    <Button
        android:id="@+id/undoBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="undoBtn"
        android:text="Undo move" />

</LinearLayout>