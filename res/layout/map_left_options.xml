<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mapLeftOptionsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/minesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mines Left:" />

    <TextView
        android:id="@+id/minesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="" />

    <TextView
        android:id="@+id/turnsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turns so far:" />

    <TextView
        android:id="@+id/turnsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="" />

    <TextView
        android:id="@+id/scoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Score:" />

    <TextView
        android:id="@+id/scoreCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:text="" />

    <TextView
        android:id="@+id/highscoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Highscore:" />

    <TextView
        android:id="@+id/highscoreData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

</LinearLayout>