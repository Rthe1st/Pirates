<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
        <TextView android:text="Level complete - your mum must be so proud of you"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
        <TextView android:id="@+id/scoreDisplay"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
   		<Button android:text="Retry"
        	android:id="@+id/retryBtn"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
    	<Button android:text="Main menu"
        	android:id="@+id/menuBtn"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>
    	<Button android:text="Next level"
    	    android:id="@+id/nextLevelBtn"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"/>

</LinearLayout>